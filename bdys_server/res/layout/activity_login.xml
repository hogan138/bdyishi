<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF"
     >
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout 
            android:id="@+id/rlout_user"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/edit_bg"
            android:gravity="center_vertical"
            >
           <ImageView
               android:id="@+id/image_user_logo"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" 
               android:background="@drawable/ic_phone"
               android:layout_marginLeft="10dp"
               android:layout_marginTop="5dp"
               android:layout_marginBottom="5dp"
               />

           <EditText
               android:id="@+id/et_user"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" 
               android:background="@drawable/edit_bg"
               android:hint="请输入手机号"
               android:phoneNumber="true"
               android:maxLength="11"
               android:numeric="integer"
               android:singleLine="true"
               android:layout_marginLeft="10dp"
               android:layout_marginRight="25dp"
               android:layout_toRightOf="@+id/image_user_logo"
               android:layout_alignTop="@+id/image_user_logo"
               android:layout_alignBottom="@+id/image_user_logo"
               />
        </RelativeLayout>
        
        <RelativeLayout 
            android:id="@+id/rlout_password"
            android:layout_below="@+id/rlout_user"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:layout_alignLeft="@+id/rlout_user"
            android:layout_alignRight="@id/rlout_user"
            android:background="@drawable/edit_bg"
            android:gravity="center_vertical"
            >
              <ImageView
                  android:id="@+id/image_password_logo"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" 
                  android:background="@drawable/ic_password"
                  android:layout_marginLeft="10dp"
                  android:layout_marginTop="6dp"
                  android:layout_marginBottom="6dp"
                  />

              <EditText
                  android:id="@+id/et_paword"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" 
                  android:background="@drawable/edit_bg"
                  android:hint="请输入验证码"
                  android:maxLength="6"
                  android:numeric="integer"
                  android:phoneNumber="true"
                  android:layout_marginLeft="10dp"
                  android:layout_toRightOf="@+id/image_password_logo"
                  android:layout_alignTop="@+id/image_password_logo"
                  android:layout_alignBottom="@+id/image_password_logo"
                  />
              <Button 
                  android:id="@+id/get_sms"
                  android:layout_width="90dp"
                  android:layout_height="match_parent"
                  android:layout_alignParentRight="true"
                  android:text="获取验证码"
                  android:textSize="13sp"
                  android:textColor="#e77777"
                  android:background="@drawable/slct_yanzheng"
                  android:layout_marginRight="5dp"
                  android:layout_marginTop="3dp"
                  android:layout_marginBottom="3dp"
                  android:enabled="false"
                  />
        </RelativeLayout>
   		
        <Button 
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/rlout_password"
            android:layout_alignRight="@id/rlout_password"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/rlout_password"
            android:text="@string/tx_register"
            android:textColor="#ffffffff"
            android:textSize="20sp"
            android:gravity="center"
            android:enabled="false"
            android:background="@drawable/slct_register"
            />
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/btn_register"
            android:layout_alignLeft="@id/rlout_password"
            android:layout_alignRight="@id/rlout_password"
            android:layout_marginTop="25dp"
            android:gravity="center|center_horizontal"
            
            >
                <ImageView 
		            android:layout_width="10dp"
		            android:layout_height="10dp"
		            android:src="@drawable/register_bg"
		            android:layout_marginRight="3dp"
		            />
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tx_xieyi1"
                    
                    android:textColor="#737373"
                    />
                <TextView 
                    android:id="@+id/tx_xieyi_web"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tx_xieyi2"
                    android:textColor="#e77777"
                    />
            
        </LinearLayout>

			<ImageView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentBottom="true"
			    android:layout_centerHorizontal="true"
			    android:src="@drawable/ic_logo"
			 />

    </RelativeLayout>
    

</LinearLayout>